<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.slideshow.BalanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-366dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="@string/balance" />

            <EditText
                android:id="@+id/total"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:hint="........."
                android:maxLength="10"
                android:text="@string/total" />

            <Button
                android:id="@+id/cambiarTotal"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="âœ"
                android:visibility="visible"
                tools:text="@string/cambiarTotal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGastoCategoria"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/textGastoCategoria"
                tools:text="@string/textGastoCategoria" />

            <EditText
                android:id="@+id/CategoriaGasto"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:gravity="left"
                android:hint="........."
                android:inputType=""
                tools:text="@string/textoGastos" />

            <Button
                android:id="@+id/btnCategoriaAceptar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/btnCategoriaAceptar"
                tools:text="@string/btnCategoriaAceptar" />

            <Button
                android:id="@+id/btnCategoriaElegir"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/btnCategoriaElegir"
                tools:text="@string/btnCategoriaElegir" />

        </LinearLayout>

        <Button
            android:id="@+id/btnMostrarGastos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_weight="0"
            android:backgroundTint="@android:color/holo_green_light"
            android:gravity="center"
            android:text="Mostrar Gastos"
            tools:text="Mostrar Gastos" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>